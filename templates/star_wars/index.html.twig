{% extends 'base.html.twig' %}

{% block title %}Hello StarWarsController!{% endblock %}

{% block body %}
<style>
    .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        align-items: center;
    }
    .container {
        display: grid;
        gap: 1rem;
        grid-auto-rows: 15rem;
        grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr));
        width: 90%;
        margin-bottom: 20px;
    }
    .card {
        all: unset;
        border: 1px solid #999999;
        height: fit-content;
        padding: 5px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    .card-img {
        width: 30%;
        border: 1px solid black;
        border-radius: 100%;
        margin-right: 10px;
    }
    .card-title {
        font-weight: bolder;
        text-overflow: ellipsis;
    }
    .form {
        margin: 20px;
    }
    .alert {
        border: 1px solid red;
        border-radius: 0.07rem;
        border-left: 4px solid red;
        padding: 5px;
    }
</style>

<div class="wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <form action="" class="form">
        <label for="name">Nombre a Buscar</label>
        <input type="text" name="characterName">
        <button type="submit">Buscar</button>
        {% if data|length == 1 %}
            <button type="submit">Todos</button>
        {% endif %}
    </form>
    {% if data|length <= 0 %}
        <div class="alert"> No existen registros con este criterio</div>
    {% endif %}
    <div class="container">
        {% for character in data %}
            <a class="card" href={{"/star-wars/show/" ~ character.id }}>
                <img src="https://img.freepik.com/vector-gratis/ilustracion-icono-vector-dibujos-animados-lindo-gato-sentado-concepto-icono-naturaleza-animal-aislado-premium-vector-estilo-dibujos-animados-plana_138676-4148.jpg" alt="aqui" class="card-img">
                <div class="card-content">
                <p class="card-title">Name: {{ character.name }}</p>
                <p>Mass: {{ character.mass }}</p>
                <p>Height: {{ character.height }}</p>
                <p>Gender: {{ character.gender }}</p>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
